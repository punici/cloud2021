<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.punici.cloud.payment.dao.PaymentDao">

    <resultMap id="BaseResultMap" type="com.punici.cloud.payment.entity.Payment">
        <id column="id" property="id" jdbcType="BIGINT" javaType="long"/>
        <result column="serial" property="serial" jdbcType="VARCHAR" javaType="string"/>

    </resultMap>

    <insert id="create" parameterType="com.punici.cloud.payment.entity.Payment" useGeneratedKeys="true" keyColumn="id">
        INSERT INTO payment (serial)
        VALUES (#{serial});
    </insert>
    <select id="getPaymentById" resultMap="BaseResultMap">
        select *
        from payment
        where id = #{id}
    </select>
</mapper>